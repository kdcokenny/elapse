# ===========================================
# GitHub App (Probot)
# ===========================================
# Get these from your GitHub App settings
APP_ID=
PRIVATE_KEY=
WEBHOOK_SECRET=

# ===========================================
# Redis
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# AI Provider (Google Gemini)
# ===========================================
GOOGLE_GENERATIVE_AI_API_KEY=

# ===========================================
# Elapse Configuration
# ===========================================
# Describe your project so AI understands business context
PROJECT_CONTEXT="A software project"

# Timezone for 9 AM daily reports (IANA format)
TEAM_TIMEZONE=America/New_York

# Discord webhook URL for posting standups
DISCORD_WEBHOOK_URL=

# ===========================================
# Optional Settings
# ===========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Server port
PORT=3000
